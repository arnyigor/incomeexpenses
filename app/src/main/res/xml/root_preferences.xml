<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory app:title="@string/preference_header_main">
        <EditTextPreference
            app:defaultValue=""
            app:key="@string/preference_key_doc_link"
            app:summary="@string/preference_title_doc_link_summary"
            app:title="@string/preference_title_doc_link" />
    </PreferenceCategory>

    <PreferenceCategory app:title="@string/preference_header_other">
        <CheckBoxPreference
            app:defaultValue="true"
            app:key="@string/pref_key_save_sort"
            app:summary="@string/save_sort_desc"
            app:title="@string/save_sort" />
    </PreferenceCategory>

</PreferenceScreen>